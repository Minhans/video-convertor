    <script>
        // Mobile Menu Toggle
        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const navLinks = document.getElementById('navLinks');
        
        mobileMenuBtn.addEventListener('click', () => {
            navLinks.classList.toggle('active');
            mobileMenuBtn.innerHTML = navLinks.classList.contains('active') 
                ? '<i class="fas fa-times"></i>' 
                : '<i class="fas fa-bars"></i>';
        });
        
        // Close mobile menu when clicking a link
        document.querySelectorAll('.nav-links a').forEach(link => {
            link.addEventListener('click', () => {
                navLinks.classList.remove('active');
                mobileMenuBtn.innerHTML = '<i class="fas fa-bars"></i>';
            });
        });
        
        // File Upload Handling
        const uploadArea = document.getElementById('uploadArea');
        const fileInput = document.getElementById('fileInput');
        const fileInfo = document.getElementById('fileInfo');
        const fileName = document.getElementById('fileName');
        const fileSize = document.getElementById('fileSize');
        const previewContainer = document.getElementById('previewContainer');
        const videoPreview = document.getElementById('videoPreview');
        
        uploadArea.addEventListener('click', () => {
            fileInput.click();
        });
        
        uploadArea.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadArea.style.borderColor = 'var(--primary-color)';
            uploadArea.style.backgroundColor = 'rgba(0, 240, 255, 0.1)';
            uploadArea.style.boxShadow = '0 0 20px rgba(0, 240, 255, 0.2)';
        });
        
        uploadArea.addEventListener('dragleave', () => {
            uploadArea.style.borderColor = 'rgba(0, 240, 255, 0.3)';
            uploadArea.style.backgroundColor = 'rgba(0, 240, 255, 0.05)';
            uploadArea.style.boxShadow = 'none';
        });
        
        uploadArea.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadArea.style.borderColor = 'rgba(0, 240, 255, 0.3)';
            uploadArea.style.backgroundColor = 'rgba(0, 240, 255, 0.05)';
            uploadArea.style.boxShadow = 'none';
            
            if (e.dataTransfer.files.length) {
                handleFile(e.dataTransfer.files[0]);
            }
        });
        
        fileInput.addEventListener('change', () => {
            if (fileInput.files.length) {
                handleFile(fileInput.files[0]);
            }
        });
        
        function handleFile(file) {
            // Validate file type
            const validTypes = ['video/mp4', 'video/quicktime', 'video/x-msvideo', 'video/x-matroska'];
            if (!validTypes.includes(file.type)) {
                showError('Please upload a valid video file (MP4, MOV, AVI, MKV)');
                return;
            }
            
            // Validate file size (500MB max)
            if (file.size > 500 * 1024 * 1024) {
                showError('File size exceeds 500MB limit');
                return;
            }
            
            // Display file info
            fileName.textContent = file.name;
            fileSize.textContent = formatFileSize(file.size);
            fileInfo.classList.add('show');
            
            // Show preview
            const videoURL = URL.createObjectURL(file);
            videoPreview.src = videoURL;
            previewContainer.classList.add('show');
            
            // Reset trim controls
            document.getElementById('trimProgress').style.width = '100%';
        }
        
        function showError(message) {
            alert(message); // In production, replace with a prettier notification
        }
        
        function formatFileSize(bytes) {
            if (bytes < 1024) return bytes + ' bytes';
            else if (bytes < 1048576) return (bytes / 1024).toFixed(1) + ' KB';
            else return (bytes / 1048576).toFixed(1) + ' MB';
        }
        
        // Quality Slider
        const qualitySlider = document.getElementById('qualitySlider');
        const qualityValue = document.getElementById('qualityValue');
        
        qualitySlider.addEventListener('input', () => {
            const qualities = ['Low', 'Medium', 'High'];
            qualityValue.textContent = qualities[qualitySlider.value - 1];
        });
        
        // Format Options
        const formatOptions = document.querySelectorAll('.format-option');
        formatOptions.forEach(option => {
            option.addEventListener('click', () => {
                formatOptions.forEach(opt => opt.classList.remove('active'));
                option.classList.add('active');
            });
        });
        
        // Convert Button
        const convertBtn = document.getElementById('convertBtn');
        convertBtn.addEventListener('click', () => {
            if (!fileInput.files.length && !videoPreview.src) {
                showError('Please upload a video file first');
                return;
            }
            
            // Simulate conversion process
            convertBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
            convertBtn.disabled = true;
            
            // Add futuristic loading animation
            const loadingInterval = setInterval(() => {
                const dots = convertBtn.innerHTML.match(/\./g) || [];
                if (dots.length < 3) {
                    convertBtn.innerHTML = convertBtn.innerHTML.replace('Processing', 'Processing.') + '.';
                } else {
                    convertBtn.innerHTML = convertBtn.innerHTML.replace(/\./g, '') + ' Processing';
                }
            }, 500);
            
            setTimeout(() => {
                clearInterval(loadingInterval);
                convertBtn.innerHTML = '<i class="fas fa-check"></i> Conversion Complete!';
                
                // Simulate download
                setTimeout(() => {
                    alert('Your converted short video is ready to download!');
                    convertBtn.innerHTML = '<i class="fas fa-bolt"></i> Convert to Shorts';
                    convertBtn.disabled = false;
                }, 1000);
            }, 3000);
        });
        
        // Reset Button
        const resetBtn = document.getElementById('resetBtn');
        resetBtn.addEventListener('click', () => {
            fileInput.value = '';
            fileInfo.classList.remove('show');
            previewContainer.classList.remove('show');
            videoPreview.src = '';
            qualitySlider.value = 3;
            qualityValue.textContent = 'High';
            
            // Reset active format option to MP4
            formatOptions.forEach(opt => opt.classList.remove('active'));
            formatOptions[0].classList.add('active');
            
            // Reset trim controls
            document.getElementById('trimProgress').style.width = '100%';
        });
        
        // Simple trim controls (visual only for this demo)
        const trimStart = document.getElementById('trimStart');
        const trimEnd = document.getElementById('trimEnd');
        const trimProgress = document.getElementById('trimProgress');
        
        let isDragging = false;
        let activeHandle = null;
        
        trimStart.addEventListener('mousedown', (e) => {
            isDragging = true;
            activeHandle = 'start';
            e.preventDefault();
        });
        
        trimEnd.addEventListener('mousedown', (e) => {
            isDragging = true;
            activeHandle = 'end';
            e.preventDefault();
        });
        
        document.addEventListener('mousemove', (e) => {
            if (!isDragging) return;
            
            const trimRange = trimProgress.parentElement;
            const rect = trimRange.getBoundingClientRect();
            let position = (e.clientX - rect.left) / rect.width;
            position = Math.max(0, Math.min(1, position));
            
            if (activeHandle === 'start') {
                const currentEnd = parseFloat(trimProgress.style.width || '100') / 100;
                position = Math.min(position, currentEnd - 0.05);
                trimProgress.style.left = (position * 100) + '%';
                trimProgress.style.width = ((currentEnd - position) * 100) + '%';
            } else if (activeHandle === 'end') {
                const currentStart = parseFloat(trimProgress.style.left || '0') / 100;
                position = Math.max(position, currentStart + 0.05);
                trimProgress.style.width = ((position - currentStart) * 100) + '%';
            }
        });
        
        document.addEventListener('mouseup', () => {
            isDragging = false;
            activeHandle = null;
        });
        
        // Add futuristic sound effects (conceptual - would need actual sound files in production)
        document.querySelectorAll('button, .format-option, .nav-links a').forEach(element => {
            element.addEventListener('click', () => {
                // In production, play a subtle sci-fi sound effect here
                // new Audio('sci-fi-click.wav').play();
            });
        });
        
        // Add animated background elements
        document.addEventListener('mousemove', (e) => {
            const x = e.clientX / window.innerWidth;
            const y = e.clientY / window.innerHeight;
            
            document.querySelector('.tech-grid').style.backgroundPosition = 
                `${x * 40}px ${y * 40}px`;
        });
    </script>
</body>
